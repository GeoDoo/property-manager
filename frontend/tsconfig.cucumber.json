{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": [
      "node",
      "@cucumber/cucumber",
      "@testing-library/react",
      "jest-dom"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src/tests/**/*.ts",
    "src/tests/**/*.tsx"
  ]
} 